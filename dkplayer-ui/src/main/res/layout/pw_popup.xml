<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_260"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="设置片尾时长(秒)"
            android:textColor="@color/textcolo"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/editsource_shape"
            android:digits="1234567890"
            android:gravity="top"
            android:hint="请输入片尾时长"
            android:minLines="1"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_text_colo"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1"
                android:background="@drawable/background_bt"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/bt_save"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/background_bt"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
