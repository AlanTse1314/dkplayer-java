<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/custom_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_icon_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/screen_projection"
        style="@style/icon_style"
        android:src="@drawable/tv_toup" />

    <ImageView
        android:id="@+id/small_window"
        style="@style/icon_style"
        android:src="@drawable/xiaochuang" />

    <ImageView
        android:id="@+id/setting"
        style="@style/icon_style"
        android:src="@drawable/btn_settings"/>
    <ImageView
        android:id="@+id/btn_windows_close"
        style="@style/icon_style"
        android:src="@drawable/btn_close"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/battery_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/battery_level"
            android:layout_width="23dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/battery_level_10"
            android:focusable="false" />
        <TextView
            android:id="@+id/system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="00:00"
            android:textColor="#ffffffff"
            android:textSize="11.0sp" />
    </LinearLayout>
</LinearLayout>



